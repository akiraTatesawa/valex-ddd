// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PrismaCompany {
  id             String           @id @default(uuid())
  name           String           @unique
  apiKey         String           @unique @default(uuid())
  createdAt      DateTime
  PrismaEmployee PrismaEmployee[]

  @@map("companies")
}

model PrismaEmployee {
  id         String        @id @default(uuid())
  fullName   String
  cpf        String        @unique
  email      String        @unique
  company    PrismaCompany @relation(fields: [companyId], references: [id])
  companyId  String
  createdAt  DateTime
  PrismaCard PrismaCard[]

  @@map("employees")
}

model PrismaCard {
  id             String           @id @default(uuid())
  employee       PrismaEmployee   @relation(fields: [employeeId], references: [id])
  employeeId     String
  cardholderName String
  type           VoucherType
  number         String
  securityCode   String
  expirationDate DateTime
  password       String?
  isVirtual      Boolean
  isBlocked      Boolean
  originalCard   PrismaCard?      @relation("VirtualCards", fields: [originalCardId], references: [id])
  originalCardId String?
  virtualCards   PrismaCard[]     @relation("VirtualCards")
  Recharge       PrismaRecharge[]

  @@unique(fields: [employeeId, type], name: "employeeId_type")
  @@map("cards")
}

model PrismaRecharge {
  id        String     @id @default(uuid())
  amount    Int
  card      PrismaCard @relation(fields: [cardId], references: [id])
  cardId    String
  createdAt DateTime

  @@map("recharges")
}

model PrismaBusiness {
  id   String      @id @default(uuid())
  name String      @unique
  type VoucherType

  @@map("businesses")
}

enum VoucherType {
  restaurant
  health
  transport
  groceries
  education
}
