generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PrismaCompany {
  id             String           @id @default(uuid())
  name           String           @unique
  apiKey         String           @unique @default(uuid())
  createdAt      DateTime
  PrismaEmployee PrismaEmployee[]

  @@map("companies")
}

model PrismaEmployee {
  id        String        @id @default(uuid())
  fullName  String
  cpf       String        @unique
  email     String        @unique
  company   PrismaCompany @relation(fields: [companyId], references: [id])
  companyId String
  createdAt DateTime

  @@map("employees")
}
